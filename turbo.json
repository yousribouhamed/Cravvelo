{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["VERCEL_URL", "VERCEL_ENV", "STAGING", "NODE_ENV", "DATABASE_URL"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["@repo/db#db:generate"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
