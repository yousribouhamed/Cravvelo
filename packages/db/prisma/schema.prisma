generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}


model Account {
  id          String @default(uuid()) @unique
  userId      String 
  AcademyIds  Json
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt
}

model Academy {
  id      String @default(uuid()) @unique
  name    String 
  courses Json
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt
    userId      String 
}


model Course {
  id                     String @default(uuid()) @unique
  academiaId             String 
  title                  String 
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt
}